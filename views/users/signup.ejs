<%- layout("/layouts/boilerPlate.ejs") %>
<link rel="stylesheet" href="/css/signup.css" />

<div class="signup">
  <form action="/signup" , method="post" class="needs-validation" novalidate>
    <h1 class="signuptitle">Signup</h1>
    <div class="signup-input">
      <label for="username" class="form-label">Username</label>
      <input type="text" name="username" class="form-control" required />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="signup-input">
      <label for="email" class="form-label">Email</label>
      <input type="email" name="email" class="form-control" required />
    </div>
    <div class="signup-input">
      <label for="password" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" required />
    </div>
    <button class="btn-success signup-btn">
      SignUp<i class="fa-solid fa-user-plus"></i>
    </button>
  </form>
  <div class="oAuth-setup">
    <p class="">
      &boxh;&boxh;&boxh;&boxh;&boxh;&boxh;&nbsp;<b>or</b>&nbsp;&boxh;&boxh;&boxh;&boxh;&boxh;&boxh;&nbsp;
    </p>

    <div class="auth-section">
      <a href="">
        <button class="btn btn-google btn-lg" style="width: 90%">
          <img
            src="https://www.svgrepo.com/show/475656/google-color.svg"
            style="width: 24px"
          />
          <span> Sign in with Google </span>
        </button>
      </a>
      <a href="">
        <button class="btn btn-google btn-lg" style="width: 90%">
          <img
            src="https://1.bp.blogspot.com/-S8HTBQqmfcs/XN0ACIRD9PI/AAAAAAAAAlo/FLhccuLdMfIFLhocRjWqsr9cVGdTN_8sgCPcBGAYYCw/s1600/f_logo_RGB-Blue_1024.png"
            style="width: 24px"
          />
          <span> Sign in with Facebook </span>
        </button>
      </a>
    </div>
    <h4 class="mt-2 mb-3 bottom-text">
      Already a member ? <b><a href="/login"> &nbsp;&nbsp;Login</a></b>
    </h4>
  </div>
</div>
