<style>
  /* Navbar Styling */

  .header {
    /* position: fixed;
    top: 0;
    left: 0; */
    width: 100%;
    height: 5.5rem;
    z-index: 1000;
    background-color: white;
  }

  .header.active {
    background-color: white;
    height: 11vh;
    animation: slideIn 500ms ease forwards;
  }

  @keyframes slideIn {
    0% {
      transform: translateY(-100%);
    }
    100% {
      transform: translateY(0);
    }
  }

  .header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .nav-icon .close,
  .nav-icon.active .open {
    display: none;
  }

  .nav-icon.active .close,
  .nav-icon .open {
    display: block;
  }

  .navbar {
    background-color: #fafcff;
    position: absolute;
    top: 85%;
    right: 1.6rem;
    border-radius: 16px;
    padding: 10px;
    min-width: 26rem;
    box-shadow: 0px 2px 4px 0px #00000033;
    transition: 200ms cubic-bezier(0, 0.7, 0.3, 1);
    transform: scale(0.4);
    visibility: hidden;
    opacity: 0;
  }

  .navbar.active {
    visibility: visible;
    opacity: 1;
    transform: scale(1);
  }

  .navbar,
  .navbar-list,
  .nav-btns {
    flex-direction: column;
    gap: 8px;
    align-items: flex-start;
  }

  .nav-link,
  .btn-link {
    padding: 6px 10px;
    color: #494a4d;
    transition: 200ms cubic-bezier(0, 0.7, 0.3, 1);
  }

  .btn-link {
    width: 100%;
    border-block-start: 1px solid #dadfe5;
    padding-block-start: 1.6rem;
  }

  :is(.nav-link, .btn-link):is(:hover, :focus),
  .nav-link.active {
    color: #fafcff;
  }
</style>

<header class="header sticky-top">
  <div class="container">
    <a href="#">
      <i class="fa-solid fa-bed navIcon"></i>
    </a>
    <nav class="navbar flex">
      <ul class="navbar-list flex">
        <li><a href="#" class="nav-link label-medium active">Home</a></li>
        <li><a href="#" class="nav-link label-medium">Rent</a></li>
        <li><a href="#" class="nav-link label-medium">Sell</a></li>
        <li><a href="#" class="nav-link label-medium">Buy</a></li>
        <li><a href="#" class="nav-link label-medium">About</a></li>
      </ul>
      <div class="nav-btns flex">
        <a href="#" class="btn-link label-medium">Login</a>
        <a href="#" class="btn btn-fill label-medium">Get Started</a>
      </div>
    </nav>
    <button
      class="nav-toggler nav-icon flex"
      aria-label="toggle navbar"
      data-nav-toggler
    >
      <i class="fa-solid fa-bars material-symbols-rounded open"></i>
      <i class="fa-solid fa-xmark material-symbols-rounded close"></i>
    </button>
  </div>
</header>

<script>
  const navToggler = document.querySelector("[data-nav-toggler]");
  const navbar = document.querySelector(".navbar");
  const header = document.querySelector(".header");
  const favBtns = document.querySelectorAll(".fav-btn");
  console.log(favBtns);

  navToggler.addEventListener("click", () => {
    navToggler.classList.toggle("active");
    navbar.classList.toggle("active");
  });

  window.addEventListener("scroll", (e) => {
    header.classList[window.scrollY > 50 ? "add" : "remove"]("active");
  });
</script>

