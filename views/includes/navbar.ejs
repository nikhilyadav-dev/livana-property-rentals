<link rel="stylesheet" href="/css/navbar.css" />

<header class="header sticky-top">
  <div class="hamburger-list">
    <% if(!currUser){ %>
    <div class="ham-item"><a class="nav-link" href="/login">Login</a></div>
    <div class="ham-item"><a class="nav-link" href="/signup">Sign up</a></div>
    <% }%>
    <div class="ham-item"><a class="nav-link" href="/listings">Explore</a></div>

    <% if(currUser){ %>

    <div class="ham-item">
      <a class="nav-link" href="/wishlist/<%= currUser._id %>">Wish List</a>
    </div>

    <div class="ham-item">
      <a class="nav-link" href="/myproperty/<%= currUser._id %>">My Property</a>
    </div>

    <% }%>

    <div class="ham-item">
      <a class="nav-link" href="/contact">Help center</a>
    </div>
    <% if(currUser){ %>
    <div class="ham-item"><a class="nav-link" href="/logout">Logout</a></div>

    <% }%>
  </div>
  <div class="nav-container">
    <a href="/listings" class="logo">
      <img
        src="/asset/9515711c20274841758db3d35e593834.jpg"
        alt=""
        width="40px"
      />
      <h1>Livana Propert Rentals</h1>
    </a>
    <form action="/listings/search/result" method="get">
      <div class="search">
        <input type="text" placeholder="Search Destination" name="q" />
        <button type="submit">
          <span>Search</span>
          <i class="fa-solid fa-magnifying-glass searchIcon"></i>
        </button>
      </div>
    </form>

    <div class="ham">
      <button class="btn1">
        <a class="nav-link" href="/listings/new">List Your Home</a>
      </button>
      <button class="btn2">
        <i class="fa-solid fa-bars hamIcon"></i>
        <i class="fa-regular fa-circle-user userIcon"></i>
      </button>
    </div>
  </div>
</header>

<script src="/js/navbar.js"></script>
