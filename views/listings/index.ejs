    onclick="filterClick()"
  >
    <div
      class="form-check form-switch form-check-reverse pe-1"
      style="cursor: pointer"
    >
      <i class="fa-solid fa-sliders" id="filter-icon"></i>
      <label class="form-check-label" for="filter-icon" style="cursor: pointer"
