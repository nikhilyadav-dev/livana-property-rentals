<% layout("/layouts/boilerPlate.ejs") %>

<style>
  .filters {
    align-items: center;
    display: flex;
    width: 100%;
    flex-direction: row;
    position: relative;
  }
  .filter-main {
    display: flex;
    flex-direction: row;
    width: 100%;
    overflow-x: scroll;
    overflow-y: hidden;
    align-items: center;
    height: 90px;
    position: relative;
    margin: 5px 2px 0px 2px;
  }

  .filter-main::-webkit-scrollbar {
    display: none;
  }

  .filter {
    min-width: max-content;
    text-align: center;
    opacity: 0.6;
    transition: 150ms ease-in-out all;
    margin: 2rem 1rem 1rem 1rem;
  }

  .filter:hover {
    opacity: 1 !important;
    border-bottom: 2.5px solid rgba(66, 63, 63, 0.679) !important;
    transform: scale(1.05) !important;
    transition: 150ms ease all;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.95rem;
    width: 100%;
  }

  .slideButton {
    cursor: pointer;
    position: sticky;
    background-color: rgb(128, 128, 128);
    color: rgb(255, 255, 255);
    height: 1.75rem;
    width: 1.75rem;
    border-radius: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.75rem;
    padding: 10px;
    z-index: 100;
    transition: all 0.2s ease-out;
  }

  .slideButton:active {
    transform: scale(1.2);
    background-color: black;
  }

  .slideButton > i {
    font-size: 1rem;
  }

  .left_img_button {
    left: 0px;
  }

  .right_img_button {
    right: 0px;
  }

  .text-toggler {
    border: 0.5px solid rgba(128, 128, 128, 0.503);
    border-radius: 12px;
    padding: 0.5rem 1rem;
    min-width: max-content;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgb(255, 255, 255);
    font-weight: 500;
  }

  .text-toggler:hover {
    border: 1px solid black !important;
  }

  .hide {
    display: none;
  }

  .card-container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 20px;
  }

  .image-container {
    height: 13rem;
    width: 100%;
  }

  .image-container img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-top-right-radius: 0.5rem !important;
    border-top-left-radius: 0.5rem !important;
    /* border-bottom-left-radius: 0;
    border-bottom-right-radius: 0; */
  }

  .listing-card {
    border: none;
    margin-bottom: 2rem;
    /* box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08); */
    background: #fff;
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .card-Info {
    padding: 0.75rem;
  }

  .card-img-overlay {
    opacity: 0;
  }

  .card-img-overlay:hover {
    opacity: 0.2;
    background: #fff;
  }

  .info-1 {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .price {
    font-weight: 600;
  }

  .title {
    width: 300px;
    margin-block: 7px;
  }

  .title h4 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 19px;
    font-weight: 600;
  }

  .offers {
    display: flex;
    justify-content: space-between;
    padding: 5px 10px 5px 10px;
  }

  .offer {
    color: gray;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5px;
  }

  .description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    width: 100%;
    margin-block: 3px;
    margin-bottom: 0.6rem;
    margin-top: 0.4rem;
    opacity: 0.8;
    font-size: 14px;
  }

  .offer-1,
  .offer-2,
  .offer-3 {
    border-right: 1px solid gray;
    padding-right: 10px;
  }
</style>

