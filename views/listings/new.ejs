<%- layout("/layouts/boilerPlate.ejs") %>
<body>
  <h3>Create New Listing</h3>
  <form method="POST" action="/listings">
    <input type="text" name="listing[title]" placeholder="enter title" />
    <br /><br />
    <textarea
      name="listing[description]"
      placeholder="enter description"
    ></textarea>
    <br /><br />
    <input type="text" placeholder="enter img URL/Link" name="listing[image]" />
    <br /><br />
    <input type="text" placeholder="enter price" name="listing[price]" />
    <br /><br />
    <input type="text" name="listing[location]" placeholder="enter location" />
    <br /><br />
    <input type="text" name="listing[country]" placeholder="enter country" />
    <br /><br />
    <button>ADD</button>
  </form>
</body>
