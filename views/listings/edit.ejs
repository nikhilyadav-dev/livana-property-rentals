<%- layout("/layouts/boilerPlate.ejs") %>
<body>
  <h3>Edit Listing</h3>
  <form method="POST" action="/listings/<%= listing.id %>?_method=PUT">
    <input
      type="text"
      name="listing[title]"
      placeholder="enter title"
      value="<%= listing.title %>"
    />
    <br /><br />
    <textarea
      name="listing[description]"
      placeholder="enter description"
      value="<%= listing.description %>"
    ></textarea>
    <br /><br />
    <input
      type="text"
      placeholder="enter img URL/Link"
      name="listing[image]"
      value="<%= listing.image %>"
    />
    <br /><br />
    <input
      type="text"
      placeholder="enter price"
      name="listing[price]"
      value="<%= listing.price %>"
    />
    <br /><br />
    <input
      type="text"
      name="listing[location]"
      placeholder="enter location"
      value="<%= listing.location %>"
    />
    <br /><br />
    <input
      type="text"
      name="listing[country]"
      placeholder="enter country"
      value="<%= listing.country %>"
    />
    <br /><br />
    <button>Edit</button>
  </form>
</body>
